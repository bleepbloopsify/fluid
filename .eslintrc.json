{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals":{
      "chrome":true,
      "$":true,
      "settings":true,
      "element":true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
      "no-unused-vars":0,
      "no-console":0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
